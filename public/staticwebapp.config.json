{  
  "routes": [
    {
      "route": "/api/auth/*",
      "methods": ["GET", "POST", "PUT"],
      "allowedRoles": ["admin", "complianceManagers", "complianceUsers"]     
    },
    {
      "route": "/api/search/*",
      "methods": ["GET", "POST", "PUT"],
      "allowedRoles": ["admin", "complianceManagers", "complianceUsers"]     
    },
    {
      "route": "/Contact*",
      "allowedRoles": ["admin", "complianceManagers", "complianceUsers"]  
    },
    {
      "route": "/People*",
      "allowedRoles": ["admin", "complianceManagers", "complianceUsers"]  
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aad",
      "allowedRoles": ["authenticated"]
    }  
    ,
    {
      "route": "/logout",
      "redirect": "/.auth/logout?post_logout_redirect_uri=.auth/login/aad",
      "allowedRoles": ["anonymous", "authenticated"]
    }  
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=.referrer"
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": { 
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/fc16c45f-83c5-424c-bfcc-5ccaa08a8fcb/v2.0",
          "clientIdSettingName": "AADClientID",
          "clientSecretSettingName": "AADSecret"
        },
        "login": {          
        
        }
      }
    }  
  }
}
